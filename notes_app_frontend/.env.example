# Frontend environment variables for Notes app (Vite)
# Vite exposes variables prefixed with VITE_ via import.meta.env

# Base URLs (not used by LocalStorage app yet; placeholders for future backend integration)
VITE_API_BASE=https://api.example.com
VITE_BACKEND_URL=https://backend.example.com
VITE_FRONTEND_URL=http://localhost:3000
VITE_WS_URL=wss://ws.example.com

# Runtime
VITE_NODE_ENV=development
VITE_NEXT_TELEMETRY_DISABLED=1
VITE_ENABLE_SOURCE_MAPS=true
VITE_PORT=3000
VITE_TRUST_PROXY=false

# Logging and health
VITE_LOG_LEVEL=info # one of: silent,error,warn,info,debug
VITE_HEALTHCHECK_PATH=/healthz

# Feature toggles (comma separated or JSON string; currently displayed in Sidebar)
VITE_FEATURE_FLAGS=search,local-persistence
VITE_EXPERIMENTS_ENABLED=false
